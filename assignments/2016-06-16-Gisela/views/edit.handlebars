<h1 class="mb-1 restaurant-show-title">Edit restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="mb-1">
        <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
          <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">餐廳名稱：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" required value="{{ restaurant.name }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="name_en" class="col-sm-2 col-form-label">英文名：</label>
            <div class="col-sm-10">
              <input type="name_en" class="form-control" id="name_en" name="name_en" value="{{ restaurant.name_en }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="category" class="col-sm-2 col-form-label">類別：</label>
            <div class="col-sm-10">
              <select class="form-control" id="category" name="category" value="{{ restaurant.category }}">
                {{#each newCategory}}
                {{#if this.selected}}
                <option selected>{{this.name}}</option>
                {{else}}
                <option>{{this.name}}</option>
                {{/if}}
                {{/each}}
              </select>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="image" class="col-sm-2 col-form-label">圖片網址：</label>
            <div class="col-sm-10">
              {{!-- <input class="form-control" type="file" id="image"> --}}
              <input type="text" class="form-control" id="image" name="image" value="{{ restaurant.image }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="location" class="col-sm-2 col-form-label">地址：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="location" name="location" required
                value="{{ restaurant.location }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="phone" class="col-sm-2 col-form-label">電話：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="phone" name="phone" required value="{{ restaurant.phone }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="rating" class="col-sm-2 col-form-label">評分(滿分 5 分)：</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" min="0" max="5" step="0.1" id="rating" name="rating" required
                value="{{ restaurant.rating }}">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">餐廳簡介：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="description" name="description"
                value="{{ restaurant.description }}">
            </div>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-success m-1">Save</button>
            <a href="/" class="btn btn-primary m-1">Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>