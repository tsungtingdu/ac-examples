<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <form action="/restaurants/{{restaurant._id}}/edit" method="GET">
          <button type="submit" class="btn btn-success m-1">edit</button>
        </form>
        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger m-1">delete</button>
        </form>
      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        {{#if restaurant.google_map}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="
          {{#if restaurant.image}}
            {{restaurant.image}}
          {{else}}
            https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png
          {{/if}}" alt="{{restaurant.name}}" style="max-width: 600px;">
    </div>
  </div>
</div>