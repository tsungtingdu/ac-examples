<form class="container" action="/records/{{record._id}}?_method=PUT" method="POST">

  <div class="row justify-content-center mt-3">
    <div class="col-3 col-lg-2 text-center fs-6">*必填欄位</div>
    <div class="col-5 col-lg-4  text-center fs-4">請輸入你的支出</div>
  </div>

  <div class="form-group row align-items-center justify-content-center mt-4">
    <label for="name" class="col-3 col-lg-2 text-center fs-4">名稱*：</label>
    <input type="text" name="name" id="name" placeholder="請輸入名稱⋯⋯" value="{{record.name}}" class="col-5 col-lg-4  form-control-lg" required>
  </div>

  <div class="form-group row align-items-center justify-content-center mt-4">
    <label for="date" class="col-3 col-lg-2 text-center fs-4">日期*：</label>
    <input type="date" name="date" id="date" placeholder="請輸入日期⋯⋯" value="{{showDate record.date}}" class="col-5 col-lg-4 form-control-lg" required>
  </div>

  <div class="form-group row align-items-center justify-content-center mt-4">
    <label for="category" class="col-3 col-lg-2 text-center fs-4">類別*：</label>
    <div class="form-group col-5 col-lg-4">
      <select class="form-select" name="category" id="category" data-value="{{record.category}}" required>
        {{#each categories}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="form-group row align-items-center justify-content-center mt-4">
    <label for="amount" class="col-3 col-lg-2 text-center fs-4">金額*：</label>
    <div class="form-group col-5 col-lg-4 form-control-lg">
      <div class="input-group">
        <span class="input-group-text">$</span>
        <input type="text" name="amount" id="amount" class="form-control" value="{{record.amount}}" aria-label="Amount (to the nearest dollar)" required>
        <span class="input-group-text">.00</span>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <button type="submit" class="btn btn-info btn-lg col-5" style="max-width: 290px;">送出</button>
  </div>

</form>

<script>
  const category= document.querySelector('#category')
  category.value = category.dataset.value
</script>