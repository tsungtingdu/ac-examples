<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">修改餐廳 <i class="fas fa-utensils"></i></h5>
          <hr>
          {{> message}}
          <form method="POST" action="/restaurants/{{restaurantObject._id}}?_method=PUT">

            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">
                餐廳名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" value={{restaurantObject.name}} required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="name_en" class="col-md-4 col-form-label">
                English Name
              </label>
              <div class="col-md-8">
                <input type="text" name="name_en" class="form-control" value="{{restaurantObject.name_en}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                餐廳類別
              </label>
              <div class="col-md-8">
                <select class="form-control" name="category" required>
                  <option value="" selected disabled>選擇類別</option>
                  <option value="咖啡" {{#if categoryObject.isCafe}} selected{{/if}}>咖啡</option>
                  <option value="酒吧" {{#if categoryObject.isBar}} selected{{/if}}>酒吧</option>
                  <option value="義式餐廳" {{#if categoryObject.isItaly}} selected{{/if}}>義式餐廳</option>
                  <option value="美式" {{#if categoryObject.isUSA}} selected{{/if}}>美式</option>
                  <option value="日本料理" {{#if categoryObject.isJapan}} selected{{/if}}>日本料理</option>
                  <option value="中東料理" {{#if categoryObject.isMiddleEast}} selected{{/if}}>中東料理</option>
                  <option value="韓式" {{#if categoryObject.isKorea}} selected{{/if}}>韓式</option>
                  <option value="中式" {{#if categoryObject.isChina}} selected{{/if}}>中式</option>
                  <option value="港式" {{#if categoryObject.isHongKong}} selected{{/if}}>港式</option>
                  <option value="泰式" {{#if categoryObject.isTailand}} selected{{/if}}>泰式</option>
                  <option value="台式" {{#if categoryObject.isTaiwan}} selected{{/if}}>台式</option>
                </select>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">
                餐廳圖片網址
              </label>
              <div class="col-md-8">
                <input type="text" name="image" class="form-control" value="{{restaurantObject.image}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">
                餐廳地址
              </label>
              <div class="col-md-8">
                <input type="text" name="location" class="form-control" value="{{restaurantObject.location}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">
                餐廳電話
              </label>
              <div class="col-md-8">
                <input type="text" name="phone" class="form-control" value="{{restaurantObject.phone}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="google_map" class="col-md-4 col-form-label">
                Google Map
              </label>
              <div class="col-md-8">
                <input type="text" name="google_map" class="form-control" value="{{restaurantObject.google_map}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">
                餐廳評價
              </label>
              <div class="col-md-8">
                <input type="number" step="0.1" max="5" min="1" name="rating" class="form-control"
                  value="{{restaurantObject.rating}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                餐廳描述
              </label>
              <div class="col-md-8">
                <textarea name="description" class="form-control" rows="5">{{restaurantObject.description}}</textarea>
              </div>
            </div>

            <div class="form-group form-row d-flex justify-content-end">
              <button class="btn btn-major mr-2" type="submit">儲存</button>
              <a href="/">
                <button class="btn btn-major" type="button">返回</button>
              </a>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>