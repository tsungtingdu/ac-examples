<!-- search bar -->
<div class="container">
  <div class="search-bar col-md-5 col-12">
    <div class="search-bar-outer ">
      <div class="search-bar-inner ">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="sort-bar col-md-4 col-12">
    <form action="/">
      <div class="form-group">
        <h4 class="mb-2">餐廳排序：</h4>
        <select name="sortBy" id="inputSort" class="form-control" onchange="action='';submit();">
          <option value="name" selected>名稱(按字母排序)</option>
          <option value="category" {{#if (eq sortBy 'category' )}} selected {{/if}}>類別</option>
          <option value="location" {{#if (eq sortBy 'location' )}} selected {{/if}}>地區</option>
        </select>
      </div>

    </form>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="CRUD row col-auto">
                <a class="btn btn-primary btn-sm " href="./restaurants/{{ this._id }}/edit">修改資訊</a>
                <a class="btn btn-secondary btn-sm" href="./restaurants/{{ this._id }}">餐廳資訊</a>
                <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button class="btn btn-danger btn-sm" type="submit">餐廳刪除</button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>