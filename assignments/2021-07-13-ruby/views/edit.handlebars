<div class="col-12 col-lg-10 col-xl-8 mx-auto my-5">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="form-group form-row">
      <label for="name" class="col-md-4 col-form-label">
        Restaurant Name
      </label>
      <div class="col-md-8">
        <input type="text" name="name" class="form-control" id="name" value="{{ restaurant.name }}" required>
      </div>
    </div>
    <div class="form-group form-row">
      <label for="image" class="col-md-4 col-form-label">
        Image Url
      </label>
      <div class="col-md-8">
        <input type="text" name="image" class="form-control" id="image" value="{{ restaurant.image }}">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="category" class="col-md-4 col-form-label">
        Category
      </label>
      <select name="category" id="category">
        <option value="日本料理">日本料理</option>
        <option value="中東料理">中東料理</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="美式料理">美式料理</option>
        <option value="酒吧">酒吧</option>
        <option value="咖啡">咖啡</option>
        <option value="其他">其他</option>
      </select>
    </div>
    <div class="form-group form-row">
      <label for="rating" class="col-md-4 col-form-label">
        Rating
      </label>
      <div class="col-md-8">
        <input type="number" name="rating" class="form-control" id="rating" step=".1" value="{{ restaurant.rating }}">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="location" class="col-md-4 col-form-label">
        Address
      </label>
      <div class="col-md-8">
        <input type="text" name="location" class="form-control" id="location" value="{{ restaurant.location }}">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="google_map" class="col-md-4 col-form-label">
        Google Map Url
      </label>
      <div class="col-md-8">
        <input type="text" name="google_map" class="form-control" id="google_map" value="{{ restaurant.google_map }}">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="phone" class="col-md-4 col-form-label">
        Phone
      </label>
      <div class="col-md-8">
        <input type="text" name="phone" class="form-control" id="phone" value="{{ restaurant.phone }}">
      </div>
    </div>
    <div class="form-group form-row">
      <label for="description" class="col-md-4 col-form-label">
        Description
      </label>
      <div class="col-md-8">
        <input type="text" name="description" class="form-control" id="description"
          value="{{ restaurant.description }}">
      </div>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <button href="/" class="btn btn-dark">Back</button>

  </form>
</div>