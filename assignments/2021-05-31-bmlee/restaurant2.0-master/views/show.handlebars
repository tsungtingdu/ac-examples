<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="d-flex justify-content-end px-5 mx-5">
  <div class="me-1"><button type="submit" class="btn btn-light btn-sm"><a href="/"><i
          class="fas fa-home"></i></a></i></button></div>
  <div class="me-1">
    <form action="/restaurants/{{restaurant._id}}/edit"><button type="submit" class="btn btn-light btn-sm"><i
          class="fas fa-edit"></i></button></form>
  </div>
  <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display: inline ms-1;">
    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
  </form>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>