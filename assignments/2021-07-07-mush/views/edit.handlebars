<div class="container-sm mt-3 ml-5">
  <div class="row">
    <div class="col-sm-6">
      <form action="/restaurants/{{restaurant._id}}/edit" method="POST" id="form" novalidate>
        <div class="form-group">
          <label for="name">餐廳名稱</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳名稱 ..." required value="{{restaurant.name}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <div class="form-group">
          <label for="name_en">餐廳英文名稱</label>
          <input type="text" class="form-control" id="name_en" name="name_en" placeholder="請輸入餐廳英文名稱 ..." value="{{restaurant.name_en}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <div class="form-group">
          <label for="category">料理種類</label>
          <input list="category" class="form-control" name="category" placeholder="請輸入料理種類" value="{{restaurant.category}}">
          <datalist id="category">
            <option>中東料理</option>
            <option>日式料理</option>
            <option>義式料理</option>
            <option>美式料理</option>
            <option>酒吧</option>
            <option>咖啡</option>
          </datalist>
        </div>

        <div class="form-group">
          <label for="location">地址</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="請輸入地址 ..." value="{{restaurant.location}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <div class="form-group">
          <label for="phone">電話</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="請輸入電話 ..." value="{{restaurant.phone}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>


        <div class="form-group">
          <label>評分分數</label>
          <div class="form-row">
            <div class="col">
              <input type="number" name="rating" class="form-control" min="0" max="10" step="0.1" placeholder="請輸入評分分數" value="{{restaurant.rating}}">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="google_map">google map</label>
          <input type="url" class="form-control" id="google_map" name="google_map" placeholder="請輸入Google map url ..." value="{{restaurant.google_map}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <div class="form-group">
          <label for="image">照片</label>
          <input type="url" class="form-control" id="image" name="image" placeholder="請輸入照片URL ..." value="{{restaurant.image}}">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <div class="form-group">
          <label for="description" rows="3" cols="20">描述</label>
          <textarea class="form-control" placeholder="描述..." id="description" name="description" >{{restaurant.description}}"</textarea>
        </div>




        <button id="submit-btn" type="submit" class="btn btn-primary">新增</button>
      </form>
    </div>
  </div>
</div>