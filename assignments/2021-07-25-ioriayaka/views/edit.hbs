<div class="container my-5">
  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <form action="/records/{{record._id}}?_method=PUT" method="POST" id="form" novalidate>
        <div class="row mb-3">
          <div class="col-auto">*必填欄位</div>
          <div class="col-auto">請修改你的支出紀錄</div>
        </div>
        <div class="row mb-3">
          <label for="name">名稱*</label>
          <div class="col-sm-6">
            <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="date">日期*</label>
          <div class="col-sm-6">
            <input type="date" class="form-control" id="date" name="date" value="{{ toDate record.date}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="category">類別*</label>
          <div class="col-sm-6">
            <select class="form-select" name="category" id="category" aria-label="Default select"
              value="{{record.category}}" required>
              {{#each categories}} 
              <option selected>{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="row mb-3">
          <label for="amount">金額*</label>
          <div class="col-sm-6">
            <input type="number" class="form-control" id="amount" name="amount" value="{{record.amount}}" required>
          </div>
        </div>
        <button id="submit-btn" type="submit" class="btn btn-warning mt-3">送出</button>
      </form>
    </div>
  </div>
</div>