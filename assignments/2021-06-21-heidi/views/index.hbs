<div class="container d-flex flex-column align-items-center">
    <!-- Dropdown filter -->
    <div class="dropdown container-dropdown">
      <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" style="width: 100%;">
        Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="width: 100%;">
        {{#each category}}
        <a class="dropdown-item" href="/filter/{{this.name}}">{{this.name}}</a>
        {{/each}}
      </div>
    </div>

    <!-- Total expense -->
    <span class='container-totalAmount'>
      <h6 style="display: inline;">Total:</h6>
      <h1 class='text-danger'
      style="display: inline;">$ {{totalAmount}}</h1>
    </span>

    {{#unless records}}
    <h4 class="text-danger">Add some new records</h4>
    {{/unless}}

    <!-- List -->
    <table class="table table-striped table-borderless container-table">
      <tbody>
        {{#each records}}
        <tr class="d-flex align-items-center justify-content-between">
            <td class="d-flex align-items-center">
              <i class="{{this.iconClass}} fa-2x text-secondary" style="opacity: 0.7;width:50px"></i>
              <div>
                <h4>{{this.name}}</h4>
                <span style="font-size: 12px;">
                  {{moment this.date format="YYYY-MM-DD"}}
                </span>
            </td>
            <td class='d-flex align-items-center justify-content-space-around'>
              <h2 class='mr-4'>${{this.amount}}</h2>
              <a class="btn btn-outline-primary mr-2" href="/records/{{this._id}}/edit" style="height: min-content;">edit</a>
              <form action="/records/{{this._id}}?_method=DELETE" method="post" style="display: inline;">
                <button class="btn btn-danger" type="submit">delete</button>
              </form>
            </td>
          </div>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <a class="btn btn-primary container-button" href="/records/new">Add</a>
</div>
