<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="card border-warning">
    <div class="card-body p-4">
      <h4 class="card-title mb-5 text-center">修改您的支出</h4>
      <div class="form-group row mb-5">
        <label for="name" class="col-sm-2 col-form-label text-white">
          <span class="text-danger">＊</span>名稱：
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" id="name" placeholder="請輸入名稱" value="{{ record.name }}" required>
        </div>
      </div>
      <div class="form-group row mb-5">
        <label for="date" class="col-sm-2 col-form-label text-white">
          <span class="text-danger">＊</span>日期：
        </label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" id="date" placeholder="請輸入日期" value="{{ record.date }}" required>
        </div>
      </div>
      <div class="form-group row mb-5">
        <label for="category" class="col-sm-2 col-form-label text-white">
          <span class="text-danger">＊</span>類別：
        </label>
        <div class="col-sm-10">
          <select class="col-sm-10 form-select" name="category" id="category" placeholder="請選擇類別" required>
              {{#each categories}}
                <option value="{{this.categoryName}}" {{#isEqual this.categoryName ../record.category}} selected {{/isEqual}}>{{this.categoryName}}</option>
              {{/each}}
            </select>
          </select>
        </div>
      </div>
      <div class="form-group row mb-5">
        <label for="amount" class="col-sm-2 col-form-label text-white">
          <span class="text-danger">＊</span>金額：
        </label>
        <div class="col-sm-10">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text" style="border: 1px solid #fff">$</span>
              <input type="number" class="form-control" name="amount" aria-label="Amount (to the nearest dollar)" value="{{ record.amount }}" required>
              <span class="input-group-text" style="border: 1px solid #fff">元</span>
            </div>
          </div>
        </div>
      </div>
      <div class="row px-3">
        <div class="col-6 col-sm-6 px-1">
          <a class="btn btn-warning text-white" href="/" role="button" style="width: 100%;">返&nbsp;回</a>
        </div>
        <div class="col-6 col-sm-6 px-1">
          <button type="submit" class="btn btn-primary" style="width: 100%;">確認修改</button>
        </div>
      </div>
    </div>
  </div>
</form>