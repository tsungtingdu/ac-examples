<div class="container" style="width: 70%">
  <div class="d-flex flex-column mt-3" style="color:#97223b;">
    <form action="/filter" method="POST">
      <div class="form-group d-flex justify-content-center">
        <label for="filterCategory"></label>
        <select name="filterCategory" id="filterCategory" class="form-control-lg col-8" onchange="this.form.submit()">
          <option value="請選擇類別">請選擇類別</option>
          <option value="全部支出">全部支出</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
    </form>

    <div class="col-4">
      <h4><strong>總金額:</strong></h4>
    </div>
    <div class="d-flex align-items-center flex-column my-3 mr-2">
      <h1 class="display-3">{{ totalAmount }}</h1>
    </div>
    <div class="d-flex justify-content-end mr-2">
      <h4 style="color:#22151b"><strong>類別:</strong></h4>
      <h4 class="ml-2" style="color:#a0808f"><strong>{{ filterCategory }}</strong></h4>
    </div>

    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <i id="{{ this.icon }}" class="{{ this.icon }} fa-3x col-4"></i>
          <div class="d-flex flex-column ml-4">
            <h4 class="my-2 mx-1">{{ this.name }}</h4>
            <h6 class="my-2 mx-1">{{ this.date }}</h6>
          </div>
        </div>
        <div class="mx-auto">
          <h3>{{ this.amount }}</h3>
        </div>
        <div class="col-auto">
          <a class="btn btn-secondary" href="./records/{{ this._id }}/edit">修改</a>
          <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>

    <ul class="list-group">
      {{#each filterList}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <i id="{{ this.icon }}" class="{{ this.icon }} fa-3x col-4"></i>
          <div class="d-flex flex-column ml-4">
            <h4 class="my-2 mx-1">{{ this.name }}</h4>
            <h6 class="my-2 mx-1">{{ this.date }}</h6>
          </div>
        </div>
        <div class="mx-auto">
          <h3>{{ this.amount }}</h3>
        </div>
        <div class="col-auto">
          <a class="btn btn-secondary" href="./records/{{ this._id }}/edit">修改</a>
          <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>

    <div class="d-flex justify-content-center my-3">
      <a class="btn btn-warning" href="./records/new" role="button">新增支出</a>
    </div>
  </div>
</div>